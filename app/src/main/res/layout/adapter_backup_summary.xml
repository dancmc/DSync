<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/grey400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/grey400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/adapter_backup_summary_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintHorizontal_weight="0.6"
        app:layout_constraintEnd_toStartOf="@id/adapter_backup_summary_number"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="On Phone"/>

    <TextView
        android:id="@+id/adapter_backup_summary_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/adapter_backup_summary_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@id/adapter_backup_summary_label"
        app:layout_constraintTop_toTopOf="@id/adapter_backup_summary_label"
        tools:text="20"/>


</androidx.constraintlayout.widget.ConstraintLayout>